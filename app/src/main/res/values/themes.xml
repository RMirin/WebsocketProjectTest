<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WebsocketProjectTest" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="enforceTextAppearance">true</item>
    </style>


    <!-- Fast buy. -->


    <style name="FastBuyBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_fast_buy_bottom_sheet_fragment</item>
    </style>

    <style name="FastBuyBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/FastBuyBottomSheet</item>
    </style>

    <style name="FastBuyBottomSheetDialogTheme" parent="FastBuyBottomSheetDialog" />


    <!-- Bottom sheet. -->


    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <!-- Custom views. -->


    <declare-styleable name="RsiView">
        <attr format="string" name="actively_sell_text"/>
        <attr format="string" name="sell_text"/>
        <attr format="string" name="neutral_text"/>
        <attr format="string" name="buy_text"/>
        <attr format="string" name="actively_buy_text"/>
    </declare-styleable>

    <declare-styleable name="RiskLevelView"/>
</resources>