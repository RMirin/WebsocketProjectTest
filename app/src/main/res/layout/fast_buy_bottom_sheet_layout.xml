<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fast_buy_top_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:src="@drawable/ic_bottom_sheet_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fast_buy_pair_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/fast_buy_top_img">

            <ImageView
                android:id="@+id/fast_buy_pair_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/spacing_normal"
                android:background="@drawable/bg_currency_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fast_buy_pair_guideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/fast_buy_currency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_normal"
                app:layout_constraintBottom_toTopOf="@+id/fast_buy_pair_guideline"
                app:layout_constraintStart_toEndOf="@+id/fast_buy_pair_img"
                tools:text="USDT" />

            <TextView
                android:id="@+id/fast_buy_pair_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="4dp"
                android:textColor="@color/white_opacity_50"
                android:textSize="@dimen/font_minute"
                app:layout_constraintStart_toEndOf="@+id/fast_buy_pair_img"
                app:layout_constraintTop_toTopOf="@+id/fast_buy_pair_guideline"
                tools:text="Tether USD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginBottom="4dp"
                android:text="@string/fast_buy_bottom_sheet_balance"
                android:textColor="@color/white_opacity_50"
                android:textSize="@dimen/font_minute"
                app:layout_constraintBottom_toTopOf="@+id/fast_buy_pair_guideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/fast_buy_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fast_buy_pair_guideline"
                tools:text="5.00$" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/fast_buy_not_enough_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:text="@string/fast_buy_bottom_sheet_not_enough_msg"
            android:textAlignment="center"
            android:lineSpacingExtra="5dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fast_buy_pair_layout" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fast_buy_vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="@dimen/spacing_large"
            android:focusable="true"
            android:paddingStart="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_normal"
            android:paddingEnd="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_normal"
            android:text="@string/fast_buy_bottom_sheet_buy"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_normal"
            app:drawableStartCompat="@drawable/ic_fast_buy_buy"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/fast_buy_vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_large"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fast_buy_vertical_guideline"
            app:layout_constraintStart_toStartOf="@+id/fast_buy_vertical_guideline"
            app:layout_constraintTop_toBottomOf="@+id/fast_buy_not_enough_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="@dimen/spacing_large"
            android:focusable="true"
            android:paddingStart="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_normal"
            android:paddingEnd="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_normal"
            android:text="@string/fast_buy_bottom_sheet_deposit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_normal"
            app:drawableStartCompat="@drawable/ic_fast_buy_deposit"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fast_buy_vertical_guideline"
            app:layout_constraintTop_toTopOf="@+id/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>