<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_candle_fragment"
    tools:context=".ui.candle.CandleFragment">

    <TextView
        android:id="@+id/candleCurrencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="USDTBTC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tradingview.lightweightcharts.view.ChartsView
        android:id="@+id/candleChartsView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@color/transpent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/candleCurrencyTextView" />

    <TextView
        android:id="@+id/candleRsiTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/candle_rsi_title"
        android:textSize="@dimen/font_large"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/candleChartsView" />

    <com.websocket.project.ui.custom.rsi_view.RsiView
        android:id="@+id/candleRsiView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/candleRsiTitleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>