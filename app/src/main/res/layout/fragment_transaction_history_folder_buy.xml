<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="showEmptyBinding"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/transactionHistoryFolderBuyVertical02Guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/transactionHistoryFolderBuyVertical045Guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

        <TextView
            android:id="@+id/transactionHistoryFolderBuyColumnCoinTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:text="@string/transaction_history_column_coin"
            android:textColor="@color/white_opacity_30"
            android:textSize="@dimen/font_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="@string/transaction_history_column_date_time"
            android:textColor="@color/white_opacity_30"
            android:textSize="@dimen/font_small"
            app:layout_constraintStart_toStartOf="@+id/transactionHistoryFolderBuyVertical02Guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="@string/transaction_history_column_type_status"
            android:textColor="@color/white_opacity_30"
            android:textSize="@dimen/font_small"
            app:layout_constraintStart_toStartOf="@+id/transactionHistoryFolderBuyVertical045Guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:text="@string/transaction_history_column_amount_fee"
            android:textColor="@color/white_opacity_30"
            android:textSize="@dimen/font_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            isInvisible="@{false}"
            show="@{showEmptyBinding}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/transactionHistoryFolderBuyShimmerInclude">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="@string/transaction_history_empty"
                android:textColor="@color/white_opacity_50"
                android:textSize="18sp" />
        </LinearLayout>

        <include
            android:id="@+id/transactionHistoryFolderBuyShimmerInclude"
            layout="@layout/layout_transaction_history_shimmer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transactionHistoryFolderBuyColumnCoinTitleText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactionHistoryFolderBuyRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/spacing_normal"
            isInvisible="@{false}"
            show="@{!showEmptyBinding}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transactionHistoryFolderBuyColumnCoinTitleText"
            tools:listitem="@layout/item_transaction_history" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>