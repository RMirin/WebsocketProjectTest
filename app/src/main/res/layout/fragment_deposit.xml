<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="depositViewModelBinding"
            type="com.websocket.project.ui.deposit.DepositViewModel" />

        <variable
            name="depositFragmentActionListenerBinding"
            type="com.websocket.project.ui.deposit.DepositFragmentActionListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/depositParentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">

        <include
            android:id="@+id/depositTopbarLayoutInclude"
            layout="@layout/topbar_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/depositTopbarLayoutInclude"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/spacing_normal">

                <TextView
                    android:id="@+id/depositNetworkTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:textColor="@color/white_opacity_50"
                    android:textSize="@dimen/font_normal"
                    tools:text="@string/deposit_network_title" />

                <TextView
                    android:id="@+id/depositNetworkBtn"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="@drawable/bg_rectangle_gradient_view"
                    android:gravity="start|center_vertical"
                    android:onClick="@{() -> depositFragmentActionListenerBinding.onDepositNetworkBtnClicked()}"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingEnd="@dimen/spacing_normal"
                    android:textColor="@color/white_opacity_50"
                    android:textSize="@dimen/font_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/supportCategoryOfAppealTitleText" />

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@android:color/transparent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_qr"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/depositUsdtAddressTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:layout_marginTop="22dp"
                    android:textColor="@color/white_opacity_50"
                    android:textSize="@dimen/font_normal"
                    tools:text="@string/deposit_usdt_address_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="@drawable/bg_rectangle_gradient_view"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/supportCategoryOfAppealTitleText">

                    <TextView
                        android:id="@+id/depositUsdtAddressText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:scrollbars="none"
                        android:text="7YYTDSFG3IOPCBVNMAERTKHB2BIFNBVAERH7NHTJKAK"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/white_opacity_50"
                        android:textSize="@dimen/font_small" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:onClick="@{() -> depositFragmentActionListenerBinding.onCopyAddressClick()}"
                        android:padding="0dp"
                        app:icon="@drawable/ic_copy"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/common_back"
                        app:layout_constraintBottom_toTopOf="@+id/itemWalletTradingAccountPosition05HorizontalGuideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/itemWalletPositions088VerticalGuideline"
                        app:layout_constraintTop_toTopOf="@+id/itemWalletTradingAccountPosition05HorizontalGuideline"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button"
                        app:strokeColor="@android:color/transparent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/depositAttentionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white_opacity_50"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/depositArriveText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:textColor="@color/white_opacity_50"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/depositFeeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:textColor="@color/white_opacity_50"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/depositSaveImageBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:background="@drawable/selector_rectangle_accent_btn"
                        android:drawablePadding="11dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLines="1"
                        android:enabled="@{depositViewModelBinding.isNetworkChosen()}"
                        android:onClick="@{() -> depositFragmentActionListenerBinding.onSaveImageClick()}"
                        android:paddingStart="25dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="25dp"
                        android:paddingBottom="20dp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_normal"
                        app:drawableStartCompat="@drawable/ic_save" />

                    <TextView
                        android:id="@+id/depositShareAddressBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:background="@drawable/selector_rectangle_accent_btn"
                        android:drawablePadding="11dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:enabled="@{depositViewModelBinding.isNetworkChosen()}"
                        android:onClick="@{() -> depositFragmentActionListenerBinding.onShareAddressClick()}"
                        android:paddingStart="@dimen/spacing_normal"
                        android:paddingTop="20dp"
                        android:paddingEnd="@dimen/spacing_normal"
                        android:paddingBottom="20dp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_normal"
                        app:drawableStartCompat="@drawable/ic_share" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>