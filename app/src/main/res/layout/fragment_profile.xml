<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    tools:context=".ui.profile.profile_main.ProfileFragment">

    <ImageButton
        android:id="@+id/profile_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="20dp"
        android:src="@drawable/ic_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_start_guideline_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/profile_end_guideline_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/profile_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/profile_start_guideline_20dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_back_btn"
        tools:text="Example@gmail.com" />

    <CheckBox
        android:id="@+id/profile_view_hide_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:button="@drawable/selector_view_hide"
        app:layout_constraintBottom_toBottomOf="@+id/profile_email_tv"
        app:layout_constraintStart_toEndOf="@+id/profile_email_tv"
        app:layout_constraintTop_toTopOf="@+id/profile_email_tv" />

    <TextView
        android:id="@+id/profile_verified_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/verified_background"
        android:fontFamily="sans-serif"
        android:paddingHorizontal="10dp"
        android:text="Verified"
        android:textColor="@color/theme_background"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_email_tv"
        app:layout_constraintEnd_toStartOf="@+id/profile_end_guideline_20dp"
        app:layout_constraintTop_toTopOf="@+id/profile_email_tv" />

    <TextView
        android:id="@+id/profile_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="ID: 333333333"
        android:textColor="@color/text_small"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/profile_start_guideline_20dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_email_tv" />

    <ImageButton
        android:id="@+id/profile_copy_id_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="@+id/profile_id_tv"
        app:layout_constraintStart_toEndOf="@+id/profile_id_tv"
        app:layout_constraintTop_toTopOf="@+id/profile_id_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_item_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toStartOf="@+id/profile_end_guideline_20dp"
        app:layout_constraintStart_toEndOf="@+id/profile_start_guideline_20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_id_tv"
        tools:itemCount="4"
        tools:listitem="@layout/item_profile" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/active_button"
        android:fontFamily="sans-serif"
        android:text="Выйти"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profile_end_guideline_20dp"
        app:layout_constraintStart_toStartOf="@+id/profile_start_guideline_20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>