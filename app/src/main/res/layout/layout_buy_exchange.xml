<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="buyFragmentActionListenerBinding"
            type="com.websocket.project.ui.wallet.buy.BuyFragmentActionListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buyExchangeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_gradient_view"
        android:padding="@dimen/spacing_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buyTopbarLayout">

        <TextView
            android:id="@+id/buyExchangePayTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/buy_pay_title"
            android:textColor="@color/white_opacity_80"
            android:textSize="@dimen/font_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/buyExchangeVertical05Guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/buyExchangeReceiveTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            tools:text="@string/buy_receive_title"
            android:textColor="@color/white_opacity_80"
            android:textSize="@dimen/font_small"
            app:layout_constraintStart_toStartOf="@+id/buyExchangeVertical05Guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buyExchangeFiatLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:onClick="@{() -> buyFragmentActionListenerBinding.onFiatBtnClick()}"
            app:layout_constraintEnd_toStartOf="@+id/buyExchangeVertical05Guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyExchangePayTitleText">

            <ImageView
                android:id="@+id/buyExchangeFiatIconImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_fiat_peso" />

            <TextView
                android:id="@+id/buyExchangeFiatTitleCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:textColor="@color/white_opacity_50"
                android:textSize="@dimen/font_normal"
                app:layout_constraintStart_toEndOf="@+id/buyExchangeFiatIconImg"
                app:layout_constraintTop_toTopOf="@+id/buyExchangeFiatIconImg"
                tools:text="PHP" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/spacing_small"
                android:src="@drawable/ic_arrow_dropdown"
                app:layout_constraintBottom_toBottomOf="@+id/buyExchangeFiatTitleCodeText"
                app:layout_constraintStart_toEndOf="@+id/buyExchangeFiatTitleCodeText"
                app:layout_constraintTop_toTopOf="@+id/buyExchangeFiatTitleCodeText" />

            <TextView
                android:id="@+id/buyExchangeFiatTitleNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white_opacity_50"
                android:textSize="@dimen/font_very_small"
                app:layout_constraintBottom_toBottomOf="@+id/buyExchangeFiatIconImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buyExchangeFiatIconImg"
                tools:text="Philippine Peso" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/buyExchangeCryptoIconImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_normal"
            android:background="@drawable/bg_buy_crypto"
            app:layout_constraintStart_toStartOf="@+id/buyExchangeVertical05Guideline"
            app:layout_constraintTop_toBottomOf="@+id/buyExchangePayTitleText"
            tools:src="@drawable/ic_crypto_usdt" />

        <TextView
            android:id="@+id/buyExchangeCryptoTitleCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:textColor="@color/white_opacity_50"
            android:textSize="@dimen/font_normal"
            app:layout_constraintStart_toEndOf="@+id/buyExchangeCryptoIconImg"
            app:layout_constraintTop_toTopOf="@+id/buyExchangeCryptoIconImg"
            tools:text="USDT" />

        <TextView
            android:id="@+id/buyExchangeCryptoTitleNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:textColor="@color/white_opacity_50"
            android:textSize="@dimen/font_very_small"
            app:layout_constraintBottom_toBottomOf="@+id/buyExchangeCryptoIconImg"
            app:layout_constraintStart_toEndOf="@+id/buyExchangeCryptoIconImg"
            tools:text="Tether USD" />

        <LinearLayout
            android:id="@+id/buyExchangePaymentLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/spacing_small"
            android:background="@drawable/bg_transparent_ok_btn"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="12dp"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toStartOf="@+id/buyExchangeVertical05Guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyExchangeFiatLayout">

            <TextView
                android:id="@+id/buyExchangePayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buyExchangeFiatIconImg"
                tools:text="5 133.00" />

            <TextView
                android:id="@+id/buyExchangeMinPayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_opacity_80"
                android:textSize="@dimen/font_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:text="Min 513.30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_transparent_ok_btn"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="12dp"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/buyExchangeVertical05Guideline"
            app:layout_constraintTop_toBottomOf="@+id/buyExchangeFiatLayout">

            <TextView
                android:id="@+id/buyExchangeReceiveText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buyExchangeFiatIconImg"
                tools:text="100.00" />

            <TextView
                android:id="@+id/buyExchangeMinReceiveText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_opacity_80"
                android:textSize="@dimen/font_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:text="Min 10.00" />

        </LinearLayout>

        <TextView
            android:id="@+id/buyExchangeBestPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buyExchangePaymentLayout"
            tools:text="Best Price\n≈ 51.33 PHP" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>