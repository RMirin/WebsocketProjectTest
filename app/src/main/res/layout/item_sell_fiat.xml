<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemIsCheckedBinding"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fiatItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/sellExchangeFiatIconImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckedTextView
            android:id="@+id/sellExchangeFiatTitleCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_normal"
            android:textColor="@drawable/selector_checked_text"
            android:checked="@{itemIsCheckedBinding}"
            app:layout_constraintBottom_toTopOf="@+id/sellExchangeFiatTitleNameText"
            app:layout_constraintStart_toEndOf="@+id/sellExchangeFiatIconImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="ARS" />

        <CheckedTextView
            android:id="@+id/sellExchangeFiatTitleNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:textSize="@dimen/font_very_small"
            android:textColor="@drawable/selector_checked_text"
            android:checked="@{itemIsCheckedBinding}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sellExchangeFiatIconImg"
            app:layout_constraintTop_toBottomOf="@id/sellExchangeFiatTitleCodeText"
            tools:text="Argentine Peso" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>