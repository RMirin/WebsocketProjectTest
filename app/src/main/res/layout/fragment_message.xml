<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_message"
    tools:context=".ui.message.MessageFragment">


    <ImageView
        android:id="@+id/messageBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_btn"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/messageBegin20dpGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/messageEnd20dpGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/messageTitleMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Login attempted from new IP"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/messageBegin20dpGuideline"
        app:layout_constraintTop_toBottomOf="@+id/messageBackBtn" />

    <TextView
        android:id="@+id/messageGeneralTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/string"
        android:ellipsize="end"
        android:textColor="@color/message_text_color"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/messageCentreHorizontalGuideline"
        app:layout_constraintStart_toEndOf="@id/messageBegin20dpGuideline"
        app:layout_constraintEnd_toStartOf="@id/messageEnd20dpGuideline"
        app:layout_constraintTop_toBottomOf="@id/messageTitleMessageTV" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/messageCentreHorizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/messageShowMoreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_show_more"
        android:textColor="@color/message_more_btn_color"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/messageBegin20dpGuideline"
        app:layout_constraintTop_toTopOf="@+id/messageCentreHorizontalGuideline" />


</androidx.constraintlayout.widget.ConstraintLayout>