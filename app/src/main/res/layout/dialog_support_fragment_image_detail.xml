<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="imageBitmap"
            type="android.graphics.Bitmap" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="41dp"
        android:id="@+id/support_fragment_image_detail_layout"
        app:cardCornerRadius="@dimen/radius_large"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/support_fragment_image_detail_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            imageBitmap="@{imageBitmap}"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rectangle_transparent_with_transparent_stroke_view"/>

    </androidx.cardview.widget.CardView>

</layout>